extends layout

block content
        h1 Estudiantes
        form(method="post")
            label(for="nombre") Nombre: 
            input(name="nombre", type="text")
            br
            label(for="edad") Edad: 
            input(name="edad", type="text")
            br
            button(type="submit") Guardar
        
        table.table
            thead
                tr
                    th(scope='col') Nombre
                    th(scope='col') Edad
            tbody
                each estudiante in estudiantes
                    tr
                        td 
                            a(href='/estudiantes/' + estudiante._id) #{estudiante.nombre}
                        td #{estudiante.edad}